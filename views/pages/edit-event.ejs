    <input type="hidden" name="id" value="<%= item[0].id%>">
       <div class="form-group row">
         <label for="comments" class="col-form-label">Comments </label>
        <div class="col-15">
                        <input type="text" name="comments" value="<%= item[0].comments%>" class="form-control">
        </div>
    </div>
   <div class="form-group row">
        <label for="starttime" class="col-form-label">Start Time </label>
        <div class="col-15">
           <input type="text" name="starttime" value="<%= item[0].starttime%>" class="form-control">
         </div>
   </div>
   <div class="form-group row">
        <label for="finishtime" class="col-form-label">Finish Time </label>
