<% include ../partials/header %>

	<div class="" style="margin-left:30px;margin-right:30px">
	    <div class="col s12">
	        <a href="event/add" class="btn btn-success btn-lg"> Add a new event</a>
	    </div>
	</div>
<br>

<div class="" style="margin-left:30px;margin-right:30px">
 <div class="col s12">
   <% if (items.length > 0) { %>
     <table class="table">
	<thread>
	  <tr>
	     <th style="width:1%;text-align:center">ID</th>
	     <th style="width:21%">Comments</th>
	     <th style="width:21%">Start Time</th>
	     <th style="width:21%">Finish Time</th>
	     <th style="width:13%">Duration</th>
	     <th style="width:2%">Rating</th>
	     <th solspan="2" style="width:20%;text-align:center">Action</th>
	  </tr>
	</thead>

	<tbody>
	  <% items.forEach(function(item, index){ %>
	    <tr>
	       <td style="width:1%;text-align:center"><%= index + 1 %></td>
	       <td style="width:21%"><%= item.comments %></td>
	       <td style="width:21%"><%= item.starttime %></td>
	       <td style="width:21%"><%= item.finishtime %></td>
	       <td style="width:13%"><%= item.duration %></td>
	       <td style="width:2%"><%= item.rating %></td>
	       <td solspan="2" style="width:20%;text-align:center">
		<a href="/event/endtime/<%= item.id %>" class="btn btn-success">Finish Time</a>
	         <a href="/event/edit/<%= item.id %>" class="btn btn-success"> Edit</a>
	         <a href="/event/delete/<%= item.id %>" class="btn btn-danger">Delete</a>
	       </td>
	    </tr>
	<% }); %>
         </tbody>
      </table>
  <% }else{  %>
	<p><strong> There are no records found.</strong></p>
  <% } %>
 </div>
</div>

<% include ../partials/footer %>
